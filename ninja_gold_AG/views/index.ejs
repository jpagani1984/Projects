<html>
    <head>
       
        <link rel="stylesheet" href="index.css"> 
    </head>
    <title id='title'>Ninja Gold</title>
    <body>
        <div id="wall">
            <br>
            <form class="scorebox" action="/score" method="POST">
                <label class='font' for='word'><%= name%>'s Current Gold: 
                <div id='window' name='gold' placeholder="0"><%= gold%></div></label>
                <button type='submit' value='score'>SCORES</button>
            </form>
            <br>
            <form class='box' action="/submit" method="POST">
                <h1>Farm</h1>
                <p>(Earns 10 - 20 gold)</p>
                <input type="hidden" name="type" value="farm">
                <button type='submit' value='gold'>FIND GOLD!!</button>
            </form>
            <form class='box' action="/submit" method="POST">
                <h1>Cave</h1>
                <p>(Earns 5 - 10 gold)</p>
                <input type="hidden" name="type" value="cave">
                <button type='submit' value='gold'>FIND GOLD!!</button>
            </form>
            <form class='box' action="/submit" method="POST">
                <h1>House</h1>
                <p>(Earns 2 - 5 gold)</p>
                <input type="hidden" name="type" value="house">
                <button type='submit' value='gold'>FIND GOLD!!</button>
            </form>
            <form class='box' action="/submit" method="POST">
                <h1>Casino</h1>
                <p>(Earns/loss 0 - 50 gold)</p>
                <input type="hidden" name="type" value="casino">
                <button type='submit' value='gold'>FIND GOLD!!</button>
            </form>
            <div>
                <label class="font" for="actions">Actions:</label>
                <div id='actions'>
                
                    <p>Earned <%= change %>  gold from the <%= type%> !</p>
                
                </div>
                
            </div>
                <form id='footer' action="/clear">
                    <button id='ninja' value='Clear'><img id = "img" src='img/ninja.png'></button>
                </form>
        </div>
    </body>
</html>
